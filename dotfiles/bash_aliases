# KEYBOARD LAYOUTS
alias set-kb-us="setxkbmap -layout us"

# SCREENFETCH
# https://chrisbuilds.github.io/terminaltexteffects/showroom/
alias sf="screenfetch -N | tte slide --merge"
alias sf1="screenfetch -N | tte beams"
alias sf2="screenfetch -N | tte binarypath"

# help
alias oc-h="vim ~/projects/debian_based_general_setup/current_shortcut_cheatsheet.md"

# kittty
#
alias skh="kitty +kitten ssh"

# VIM
alias vi="vim"
alias vim-no-plugins="vim  --noplugin -Nu NONE"

# XCLIP COPY PASTE
alias "c=xclip"
alias "c-sys=xclip -selection clipboard"
alias "v=xclip -o"

# GNU Screen
alias s="screen"

# GIT

alias g-s="git status"
alias g-a="git add"
alias g-c="git commit"
alias g-p="git push"
alias g-pu="git pull"
alias g-c-undo="git reset --soft HEAD~1"
alias gw-a="git worktree add"
alias gw-s="git worktree status"
alias gw-r="git worktree remove"
# create an alias that stes the origin to the current worktree

# CONDA
alias ca='conda activate'
alias cda='conda deactivate'
alias cie='conda info --envs'
alias cr='conda env remove -n'

# PYTHON
alias p='python'
alias pip-install-pytorch="pip3 install torch torchvision torchaudio"
alias conda-install-pytorch="conda install pytorch torchvision torchaudio pytorch-cuda=11.7 -c pytorch -c nvidia"

# JUPYTER
alias jupyter-remote="jupyter notebook --no-browser --port=8888 --NotebookApp.iopub_data_rate_limit=1.0e10"
alias create-ja-pair="python -m jupyter_ascending.scripts.make_pair --base"
alias install-ja-in-this-venv="pip install jupyter_ascending;jupyter nbextension install --py --sys-prefix jupyter_ascending;jupyter nbextension     enable jupyter_ascending --sys-prefix --py;jupyter serverextension enable jupyter_ascending --sys-prefix --py"

# TAR
alias untar-gz="tar -xzvf"
alias untar-xz="tar -xJvf"
alias untar-bz2="tar -xjvf"
alias tar-gz="tar -czvf"
alias tar-xz="tar -cJvf"
alias tar-bz2="tar -cjvf"

# ENCRYPTION
alias encrypt="gpg -c"
alias decrypt="gpg -d"

# INSTALL
alias install-deb="sudo dpkg -i"
